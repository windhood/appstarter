<header class="master">
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <a class="brand" href="/"><%= Settings.appname %></a>
        
        <ul class="nav">
          <li><%= link_to "Home", root_path %></li>
          <li class="dropdown" data-dropdown="dropdown">
            <a href="#" class="dropdown-toggle">Articles</a>
            <ul class="dropdown-menu">
              <li><%= link_to "List", users_path %></li>
              <li><%= link_to "New User", new_user_path %></li>
            </ul>
          </li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
        
        <form class="pull-left" action="">
          <input type="text" placeholder="Search Files" />
        </form>
        
        
        <ul class="nav secondary-nav">
          <% if current_user %>
          <li class="dropdown" data-dropdown="dropdown">
            <a href="#" class="session dropdown-toggle">
              <%= image_tag(current_user.default_avatar_url 20) %>
              <span class="username"><%= current_user.name || current_user.username || current_user.email %></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/settings/account">Edit Account</a></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path  %></li>
          <% end %>
        </ul>
        
      </div>
    </div>
  </div>
</header>